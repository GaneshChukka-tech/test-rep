{
	"name": "DailySales",
	"properties": {
		"activities": [
			{
				"name": "CheckFileAvailability",
				"type": "GetMetadata",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"dataset": {
						"referenceName": "DS_Checkfilegetmetadata",
						"type": "DatasetReference",
						"parameters": {
							"container": {
								"value": "@pipeline().parameters.blobcontainer",
								"type": "Expression"
							},
							"directory": {
								"value": "@pipeline().parameters.blobdirectory",
								"type": "Expression"
							},
							"filename": {
								"value": "sales*.csv",
								"type": "Expression"
							}
						}
					},
					"fieldList": [
						"childItems"
					],
					"storeSettings": {
						"type": "AzureBlobStorageReadSettings",
						"enablePartitionDiscovery": false
					},
					"formatSettings": {
						"type": "BinaryReadSettings"
					}
				}
			}
		],
		"parameters": {
			"blobcontainer": {
				"type": "string",
				"defaultValue": "inputfiles"
			},
			"blobdirectory": {
				"type": "string",
				"defaultValue": "files/filesinput"
			}
		},
		"annotations": []
	}
}